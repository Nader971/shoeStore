<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/color_blue</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="login_btn_style">
        <item name="android:layout_marginStart">@dimen/login_btn_margin_start_end_top</item>
        <item name="android:layout_marginTop">@dimen/login_btn_margin_start_end_top</item>
        <item name="android:layout_marginEnd">@dimen/login_btn_margin_start_end_top</item>
        <item name="android:background">@drawable/button_rounded</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:paddingTop">@dimen/login_btn_padding_top_bottom</item>
        <item name="android:paddingBottom">@dimen/login_btn_padding_top_bottom</item>
        <item name="android:textColor">#0288D1</item>
        <item name="android:textSize">@dimen/login_btn_text_size</item>
    </style>

    <style name="sign_in_title">
        <item name="android:layout_marginTop">@dimen/title_tv_margin_top</item>
        <item name="android:layout_marginBottom">@dimen/title_tv_margin_bottom</item>
        <item name="android:textColor">@color/whiteColor</item>
        <item name="android:textSize">@dimen/title_tv_text_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="edit_text_style">
        <item name="android:backgroundTint">#00000000</item>
        <item name="android:paddingStart">@dimen/login_et_padding_start_top_bottom</item>
        <item name="android:paddingTop">@dimen/login_et_padding_start_top_bottom</item>
        <item name="android:paddingBottom">@dimen/login_et_padding_start_top_bottom</item>
        <item name="android:textColorHighlight">#F4F4F4</item>
        <item name="android:textColorLink">#E8E5E5</item>
        <item name="android:textSize">@dimen/login_et_text_size</item>
    </style>

    <style name="login_tv_email_password_title">
        <item name="android:layout_marginTop">@dimen/login_tv_margin_top_bottom</item>
        <item name="android:layout_marginBottom">@dimen/email_tv_margin_bottom</item>
        <item name="android:paddingLeft">@dimen/tv_padding_left</item>
        <item name="android:textColor">@color/whiteColor</item>
        <item name="android:textSize">@dimen/email_tv_text_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="text_field_style">
        <item name="android:layout_marginStart">@dimen/text_field_margin_start_end</item>
        <item name="android:layout_marginTop">@dimen/text_field_margin_top</item>
        <item name="android:layout_marginEnd">@dimen/text_field_margin_start_end</item>
    </style>

    <style name="text_view_title_style">
        <item name="android:layout_marginTop">@dimen/details_tv_margin_top</item>
        <item name="android:textSize">@dimen/details_tv_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginStart">@dimen/text_field_margin_start_end</item>
        <item name="android:layout_marginEnd">@dimen/text_field_margin_start_end</item>
    </style>

    <style name="button_rounded_style">
        <item name="android:layout_marginStart">@dimen/btn_marginStartEnd</item>
        <item name="android:layout_marginTop">@dimen/intro_screen_sign_in_btn_marginTop</item>
        <item name="android:layout_marginEnd">@dimen/btn_marginStartEnd</item>
        <item name="android:background">@drawable/button_rounded_blue</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:paddingTop">@dimen/btn_paddingTopBottom</item>
        <item name="android:paddingBottom">@dimen/btn_paddingTopBottom</item>
        <item name="android:textColor">@color/whiteColor</item>
        <item name="android:textSize">@dimen/btn_text_size</item>
    </style>

    <style name="text_view_item_list_style">
        <item name="android:textColor">@color/whiteColor</item>
        <item name="android:textSize">@dimen/item_list_tv_text_size</item>
    </style>

</resources>
